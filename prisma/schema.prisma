generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FARMER
  DISTRIBUTOR
  RETAILER
  CONSUMER
}

model User {
  id            String    @id @default(uuid())
  name          String // Full name
  username      String?  @unique // Username (unique); optional until migration applied
  email         String    @unique
  password      String
  verified      Boolean   @default(false)
  role          Role      @default(CONSUMER)
  phoneNumber   String?
  address       String?
  profileImage  String?   // Avatar URL
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  products      Product[] // Only for farmers
  passwordResetTokens PasswordResetToken[] // Password reset tokens
  
  @@map("users")
}

model Product {
  id             String             @id @default(uuid())
  name           String
  origin         String
  manufactureDate DateTime
  qrCodeUrl      String?
  blockchainTxId String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  farmerId       String            // Reference to the farmer who created the product
  farmer         User              @relation(fields: [farmerId], references: [id])
  events         SupplyChainEvent[]
  price          Decimal           @db.Decimal(10, 2)
  description    String?           @db.Text
  category       String
  imageUrl       String?
  latitude       Float?            // Geolocation: Latitude where product was registered
  longitude      Float?            // Geolocation: Longitude where product was registered
  locationAccuracy Float?          // Geolocation: Accuracy in meters

  @@map("products")
}

model SupplyChainEvent {
  id             String   @id @default(uuid())
  productId      String
  eventType      String
  location       String
  timestamp      DateTime @default(now())
  blockchainTxId String?
  product        Product  @relation(fields: [productId], references: [id])
  temperature    Float?   // For tracking storage conditions
  humidity      Float?   // For tracking storage conditions
  notes         String?  @db.Text
  latitude       Float?   // Geolocation: Latitude where event occurred
  longitude      Float?   // Geolocation: Longitude where event occurred
  locationAccuracy Float? // Geolocation: Accuracy in meters
  userId         String?  // User who created this event

  @@map("supply_chain_events")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}